@using TP03.Models.Enums
@using TP03.Models.ViewModels
@model BookVM

@{
    ViewData["Title"] = "Ajouter un livre";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h2>Ajouter un nouveau livre</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-4 offset-4">
                <img id="coverPicturePreview" class="img-thumbnail rounded" style="max-width: 100%"/>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="label-control"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ISBN" class="label-control"></label>
                        <input asp-for="ISBN" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="label-control"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureURL" class="label-control"></label>
                        <input asp-for="PictureURL" class="form-control" />
                        <span asp-validation-for="PictureURL" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BookCategory" class="label-control"></label>
                        <select asp-for="BookCategory" asp-items="Html.GetEnumSelectList<BookCategory>()" class="form-control" ></select>
                        <span asp-validation-for="BookCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorId" class="label-control"></label>
                        <select asp-for="AuthorId" class="form-control" asp-items="@ViewBag.Authors"></select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReleaseDate" class="label-control"></label>
                        <input asp-for="ReleaseDate" type="date" class="form-control" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row form-group">
                <label asp-for="Description" class="label-control"></label>
                <textarea asp-for="Description" style="min-height: 200px" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success float-end"><i class="bi bi-plus-circle"></i> Ajouter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Retour aux livres</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById("coverPicturePreview");
            output.src = $("#PictureURL").val();
        })
        $("#PictureURL").on("change", function() {
            var output = document.getElementById("coverPicturePreview");
            output.src = $(this).val();
        })
    </script>
}