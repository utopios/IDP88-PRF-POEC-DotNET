@model Product
<div class="container">
    <h1 class="row">Detail</h1>
    @if(Model != null)
    {
        <div class="row">
            <span class="col">Titre : @Model.Title</span>
        </div>
        <div class="row">
            <span class="col">Prix : @Model.Price €</span>
        </div>
        <div class="row">
            <span class="col">Description : @Model.Description</span>
        </div>
        <div class="row">
            <span class="col"><a asp-action="AddToCart" asp-controller="Sale" asp-route-id="@Model.Id">Ajouter au panier</a></span>
        </div>
    }else
    {
        <div class="alert row alert-danger">
            <span class="col">Aucun produit avec cet id</span>
        </div>
    }
</div>