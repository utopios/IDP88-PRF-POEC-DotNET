<Window x:Class="LePendu.Views.WordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LePendu.Views"
        mc:Ignorable="d"
        Title="WordWindow" Height="254" Width="424">
    <Grid>
        <Label Content="Mot : " HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.105,0.233"/>
        <TextBox HorizontalAlignment="Left" Margin="79,10,0,0" TextWrapping="Wrap" Text="{Binding WordValue}" VerticalAlignment="Top" Width="206" Height="26"/>
        <Button Content="Ajouter" Command="{Binding AddCommand}" HorizontalAlignment="Left" Margin="25,50,0,0" VerticalAlignment="Top" Height="29" Width="260"/>

    </Grid>
</Window>
