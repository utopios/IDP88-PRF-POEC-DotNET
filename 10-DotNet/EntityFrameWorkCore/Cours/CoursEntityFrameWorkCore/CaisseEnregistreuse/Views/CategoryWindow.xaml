<Window x:Class="CaisseEnregistreuse.Views.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaisseEnregistreuse.Views"
        mc:Ignorable="d"
        Title="CategoryWindow" Height="157" Width="367">
    <Grid>
        <Label Content="Titre : " HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="58,28,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="286" Height="26"/>
        <Button Content="Valider" Command="{Binding AddCategoryCommand}" HorizontalAlignment="Left" Margin="13,75,0,0" VerticalAlignment="Top" Height="35" Width="331"/>

    </Grid>
</Window>
