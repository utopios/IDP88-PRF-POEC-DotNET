<Window x:Class="_01_DécouverteWPF.ListViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_DécouverteWPF"
        mc:Ignorable="d"
        Title="ListViewWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <ListView x:Name="ListeBoxPersonne" ScrollViewer.VerticalScrollBarVisibility="Visible" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="400" Header="Nom" DisplayMemberBinding="{Binding Nom}"/>
                    <GridViewColumn Width="200" Header="Prénom" DisplayMemberBinding="{Binding Prenom}"/>
                    <GridViewColumn Width="195" Header="Age" DisplayMemberBinding="{Binding Age}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
